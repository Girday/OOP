{
  "name": "C++ OOP Labs",

  "build": {
    "dockerfile": "Dockerfile"
  },

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake"
      ]
    }
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y gdb"
}
